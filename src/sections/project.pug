section.project
    .container
        .text
            h1 Our Project
            h3 Our company is latest at cleaning servicing company. We can clean your space including home.
            hr
        .nav
            - const projects = ['All Project','House', 'Office','Garden','Apartment']
            each project in projects
                if project === 'All Project'
                    a.nav__link.new.link__active(href="#")=project
                else
                    a.nav__link.new.inactive(href="#")=project
        .photo
            img(src="img/project_1.png" alt="picture")
            img(src="img/project_2.png" alt="picture")
            img(src="img/project_3.png" alt="picture")
            img(src="img/project_4.png" alt="picture")
            img(src="img/project_5.png" alt="picture")
            img(src="img/project_6.png" alt="picture")

